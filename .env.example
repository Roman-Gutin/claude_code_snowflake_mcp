# Snowflake MCP Configuration
# Copy this file to .env and fill in your values

# Snowflake Account Information
SNOWFLAKE_ACCOUNT_IDENTIFIER=YOURORG-YOURACCOUNT
# Example: MYORG-MYACCOUNT_USERNAME

# OAuth Client Credentials (from Snowflake)
# Get these by running: SELECT SYSTEM$SHOW_OAUTH_CLIENT_SECRETS('CLAUDE_CODE_MCP_OAUTH');
OAUTH_CLIENT_ID=your_client_id_here
OAUTH_CLIENT_SECRET=your_client_secret_here

# OAuth Redirect URI (should match what's in Snowflake)
OAUTH_REDIRECT_URI=http://127.0.0.1:3000/oauth/callback

# Refresh Token (obtained after first OAuth flow)
# Leave empty initially - will be populated after running oauth_flow.sh
OAUTH_REFRESH_TOKEN=

# MCP Server Configuration
MCP_DATABASE=YOUR_DATABASE
MCP_SCHEMA=YOUR_SCHEMA
MCP_SERVER_NAME=your_mcp_server

# Optional: MCP Server friendly name for Claude Code
MCP_FRIENDLY_NAME=your_mcp_server
